<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>
    <system.serviceModel>
		<services>
			<service name="PiperchatService.Service1" behaviorConfiguration="mexBehaviour">
				<endpoint address="PiperchatService" binding="basicHttpBinding" contract="PiperchatService.IService1">
				</endpoint>
				<endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange">
				</endpoint>
				<host>
					<baseAddresses>
						<add baseAddress="http://localhost:8733/Design_Time_Addresses/PiperchatService/Service1/mex"/>
					</baseAddresses>
				</host>
			</service>
		</services>
		<behaviors>
			<serviceBehaviors>
				<behavior name="mexBehaviour">
					<serviceMetadata httpGetEnabled="true"/>
				</behavior>
			</serviceBehaviors>
		</behaviors>
	</system.serviceModel>
</configuration>